            <div class="form-group">
              <label for="imdb_rating">Rate by IMDB</label>
              <input type="text" class="form-control" id="imdb_rating" name="imdb_rating" />
            </div>
            <div class="form-group">
              <label for="rotten_tomatoes">Rate by Rotten Tomatoes</label>
              <input type="text" class="form-control" id="rotten_tomatoes" name="rotten_tomatoes" />
            </div>



            <button type="submit" class="btn btn-primary">Submit</button>

          </form>
        </div>
      </div>
    </div>
